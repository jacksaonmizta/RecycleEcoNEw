<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RecycleEco.ViewModel"
             mc:Ignorable="d"
             x:Class="RecycleEco.Views.CollectorUpdateSubmission"
             BackgroundColor="ForestGreen">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SubmissionUpdateVM x:Key="SUVM"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>

        <StackLayout BindingContext="{StaticResource SUVM}"
                Margin="20"
                    BackgroundColor="White"
                    Padding="10">
            
                <Label Text="View Appointments"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="30"
                    TextColor="ForestGreen"
                    FontAttributes="Bold"/>

                <Label 
                    Text="Click on the appointment record to update submission details"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="10"
                    TextColor="Black"
                    FontAttributes="Bold"/>

            <StackLayout Orientation="Horizontal"
                         Margin="20">

                <Label Text="Recycler"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="10"
                       TextColor="ForestGreen"
                       FontAttributes="Bold"/> 
                
                <Label Text="Material Name"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="10"
                       TextColor="ForestGreen"
                       FontAttributes="Bold"/>
                    
                    <Label Text="Date Submitted"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="10"
                       TextColor="ForestGreen"
                       FontAttributes="Bold"/>
                
                    <Label Text="Points"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="10"
                       TextColor="ForestGreen"
                       FontAttributes="Bold"/>
                
                    <Label Text="Status"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="10"
                       TextColor="ForestGreen"
                       FontAttributes="Bold"/>
                
                </StackLayout>
                <ListView x:Name="submissionListView" 
                      ItemsSource="{Binding SubmissionList}"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          BackgroundColor="LightGreen">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal"
                                         Margin="10">
                                <Label Text="{Binding Recycler}"
                                       FontSize="10"
                                       HorizontalOptions="CenterAndExpand"/>
                                <Label Text="{Binding MaterialName}"
                                       FontSize="10"
                                       HorizontalOptions="CenterAndExpand"/>
                                    <Label Text="{Binding SubmittedDate}"
                                       FontSize="10"
                                       HorizontalOptions="CenterAndExpand"/>
                                    <Label Text="{Binding Points}"
                                       FontSize="10"
                                       HorizontalOptions="CenterAndExpand"/>
                                    <Label Text="{Binding Status}"
                                       FontSize="10"
                                       HorizontalOptions="CenterAndExpand"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

</ContentPage.Content>
</ContentPage>