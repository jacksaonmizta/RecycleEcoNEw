                       Grid.Column="0"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="Start"/>

                <Picker Grid.Row="5"
                        Grid.ColumnSpan="2"
                    SelectedIndex="{Binding Status, Mode=TwoWay}">
                    <Picker.Items>
                        <x:String>To Buy</x:String>
                        <x:String>To Read</x:String>
