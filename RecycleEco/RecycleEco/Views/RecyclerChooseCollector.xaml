<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:RecycleEco.ViewModel"
             x:Class="RecycleEco.Views.RecyclerChooseCollector">


    <ContentPage.Resources>
        <ResourceDictionary>
            <local:CollectorListVM x:Key="CLVM" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="20"
                     Padding="10"
                     BindingContext="{StaticResource Key=CLVM}">

            <Label HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="30"
                   Text="Select Collector"
                   TextColor="Black"/>
            <StackLayout Orientation="Horizontal">

                <Label Text="Collectore Name"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="15"
                       TextColor="Black"/>

                <Label Text="Address"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="15"
                       TextColor="Black"/>

            </StackLayout>
            <ListView x:Name="collectorListView" 
                      ItemsSource="{Binding CollectorList}"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal"
                                         Margin="10">

                                <Label Text="{Binding FullName}"
                                       FontSize="15"
                                       HorizontalOptions="CenterAndExpand"
                                      HorizontalTextAlignment="Start"/>
                                <Label Text="{Binding Address}"
                                       FontSize="15"
                                       HorizontalOptions="CenterAndExpand"
                                      HorizontalTextAlignment="Start"/>

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>